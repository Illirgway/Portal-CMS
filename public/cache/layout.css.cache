body {font-family: 'Text Me One', sans-serif;padding: 0;margin: 0;background: url(http://portalcms:8888/server/layout/hendrikweiler.com/assets/img/bg.png) repeat-x #fff;letter-spacing: 1px;}.website {width: 960px;margin: auto;}.headline {margin-top: 20px;font-family: 'Rambla', sans-serif;}.headline a {text-decoration: none;}.headline h1 {color: #fff;margin: 0;text-shadow: 1px 1px 0px #000000;filter: dropshadow(color=#000000, offx=1, offy=1);}.headline h5 {margin: 0;color: #6CA4FF;text-transform: uppercase;}.content {margin-top: 20px;}/* bildtext template */.bildtext {border-bottom: 3px solid #aaa;padding: 20px;overflow: hidden;background: white;margin-bottom: 60px;}.bildtext p {clear: left;}.bildtext div.bild {width: 200px;float: left;}.bildtext div.bild img {width: 150px;}.bildtext div.text2 h3 {font-family: 'Rambla', sans-serif;float: left;}.bildtext div.text2 {width: 400px;float: left;}.bildtext div.text {width: 859px;float: left;}.bildtext div.text p {margin-bottom: 0;}/* projekt template */.projekt {background: url(http://portalcms:8888/server/layout/hendrikweiler.com/assets/img/projekt-bg.png) repeat-x #fff;height: 420px;width: 100%;margin: 20px 0;}.projekt div.image {width: 300px;overflow: hidden;float: left;padding-top: 60px;padding-left: 20px;}.projekt div.image img {width: 400px;border: 2px solid #0071BC;}.projekt div.description {float: left;margin: 60px 0 0 40px;border-bottom: 3px solid #aaa;padding: 20px;overflow: hidden;background: white;}.projekt-scrollbar {height: 200px;overflow: hidden;}.projekt-scrollbar { width: 520px; clear: both; margin: 20px 0 10px; }.projekt-scrollbar .viewport { width: 500px; height: 200px; overflow: hidden; position: relative; }.projekt-scrollbar .overview { list-style: none; position: absolute; left: 0; top: 0; }.projekt-scrollbar .thumb .end,.projekt-scrollbar .thumb { background-color: #003D5D; }.projekt-scrollbar .scrollbar { position: relative; float: right; width: 15px; }.projekt-scrollbar .track { background-color: #D8EEFD; height: 100%; width:13px; position: relative; padding: 0 1px; }.projekt-scrollbar .thumb { height: 20px; width: 13px; cursor: pointer; overflow: hidden; position: absolute; top: 0; }.projekt-scrollbar .thumb .end { overflow: hidden; height: 5px; width: 13px; }.projekt-scrollbar .disable{ display: none; }.noSelect { user-select: none; -o-user-select: none; -moz-user-select: none; -khtml-user-select: none; -webkit-user-select: none; }.projekt div.description h2 p,.projekt div.description h2 {font-family: 'Rambla', sans-serif;padding: 0;margin: 0;}.projekt div.links {clear: left;padding-top: 27px;text-align: right;padding-right: 20px;}.projekt div.links a {color: white;text-decoration: none;}/* imprint */#group_en_5 {margin-top: -5px;}/* footer */.footer {background: #0071BC;padding: 5px;color: white;border-top: 3px solid #004370;overflow: hidden;}.footer div.inner {width: 960px;margin: auto;}.footer div.thing {float: left;width: 530px;padding-left: 20px;padding-top: 16px;}.footer div.meta {float: left;width: 380px;text-align: right;}.footer div.meta ul {list-style: none;padding: 0;}.footer div.meta a.active_1,.footer div.meta a:hover {text-decoration: underline;}.footer div.meta a {color: white;text-decoration: none;}