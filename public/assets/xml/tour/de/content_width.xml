<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<storyboard>
	<tour label="Einzelne Inhalte in spalten aufteilen" />
    <debug></debug>
	<steps>
		<step target=".content_width_text:eq(0)" based_on="offset" mode="ignore_position">
			<position_difference top="15" left="105" />
			<text>Hier sehen Sie das jetzige Verhältnis.</text>
		</step>
		<step target="input[name='split_box[]']:eq(0)" condition="clicked" based_on="offset">
			<position_difference top="15" left="10" />
			<text>Klicken Sie auf die checkbox.</text>
		</step>
		<step target="div.split_box_container" based_on="offset">
			<position_difference top="50" left="30" />
			<text>Wähle das Verhältnis, in der die ausgewählten Inhalte geteilt werden sollen.</text>
		</step>
		<step target="div.split_box_container" based_on="offset">
			<position_difference top="70" left="150" />
			<text>Übernehme die Einstellungen.</text>
		</step>
	</steps>
</storyboard>