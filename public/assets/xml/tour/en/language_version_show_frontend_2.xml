<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<storyboard>
	<tour label="Display a list of all available website languages on the website" />
	<steps>
        <step live_target=".nav li:eq(3)" condition="clicked" based_on="offset">
            <position_difference top="20" left="20" />
			<text>Go to the "Modul"-Tab.</text>
		</step>
        <step live_target="[name=module_language_switcher]">
            <position_difference top="20" left="20" />
			<text>Activate the "Language selection".</text>
		</step>
        <step live_target="#form_submit">
            <position_difference top="20" left="60" />
			<text>Save the settings. The selection is now visible on the website.</text>
		</step>
	</steps>
</storyboard>