<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<storyboard>
	<tour label="Create a new navigationgroup (for example Footer)" />
    <debug></debug>
	<steps>
        <step target=".open-navigationmenu" condition="clicked">
            <position_difference top="20" left="5" />
            <text>Press here to open the navigationgroup menu.</text>
        </step>
        <step target=".navigation_groups .options-label" based_on="offset">
            <position_difference top="20" left="20" />
            <text>Fill out this textfield.</text>
        </step>
        <step target=".navigation_groups .options-action" based_on="offset">
            <position_difference top="20" left="0" />
            <text>Confirm it.</text>
        </step>
	</steps>
</storyboard>