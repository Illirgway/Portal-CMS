<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<storyboard>
	<tour label="Edit or delete an existing navigationgroup" />
	<steps>
        <step target=".open-navigationmenu" condition="clicked">
            <position_difference top="20" left="5" />
            <text>Press here to open the navigationgroup menu.</text>
        </step>
        <step target=".edit-group:eq(0)" based_on="offset">
            <position_difference top="20" left="20" />
            <text>Change the name of the current navigationgroup.</text>
        </step>
        <step live_target=".options-label:eq(0) input" based_on="offset" mode="ignore_position">
            <position_difference top="20" left="20" />
            <text>Fill out this field.</text>
        </step>
        <step target=".edit-group:eq(0)" based_on="offset">
            <position_difference top="20" left="20" />
            <text>Change it through clicking on this button.</text>
        </step>
        <step target=".delete-group:eq(0)" based_on="offset">
            <position_difference top="20" left="20" />
            <text>To delete this navigationgroup, press on this button.</text>
        </step>
	</steps>
</storyboard>