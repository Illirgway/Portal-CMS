<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<storyboard>
	<tour label="Change the current website layout" />
	<steps>
        <step target=".choose_layout:first" based_on="offset">
            <position_difference top="10" left="10" />
			<text>By pressing on that radiobutton your layout will be changed. Its changed then automaticly. </text>
		</step>
        <step target="form:first" based_on="offset">
            <position_difference top="60" left="120" />
			<text>In this area you can choose the navigationsgroups. They will be displayed in the given position inside the layout.</text>
		</step>
        <step target=".actions #form_submit" based_on="offset">
            <position_difference top="20" left="30" />
			<text>Save the settings.</text>
		</step>
	</steps>
</storyboard>