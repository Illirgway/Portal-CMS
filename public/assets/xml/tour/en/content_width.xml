<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<storyboard>
	<tour label="Set single contents into columns" />
	<steps>
		<step target="input[name='split_box[]']:eq(0)">
			<position_difference top="15" left="-25" />
			<text>Here you see the current setting.</text>
		</step>
		<step target="input[name='split_box[]']:eq(0)" condition="clicked">
			<position_difference top="15" left="10" />
			<text>Click on the checkbox.</text>
		</step>
		<step target="div.split_box_container">
			<position_difference top="50" left="30" />
			<text>Choose the setting, what the different contents should have.</text>
		</step>
		<step target="div.split_box_container">
			<position_difference top="50" left="130" />
			<text>Accept the settings.</text>
		</step>
	</steps>
</storyboard>