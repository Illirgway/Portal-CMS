<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<storyboard>
	<tour label="Updating the system" />
	<steps>
		<step target=".update-action a.btn.disabled.update_not_available" not_found_target="#update form">
			<position_difference top="20" left="60" />
			<text>Some updates arent available yet. They will be listed anyway to see what is planed.</text>
		</step>
		<step live_target=".update-action a.btn.disabled:not(a.update_not_available)" not_found_target="#update form"> 
			<position_difference top="20" left="60" />
			<text>You have to update to the previous version to update to this version.</text>
		</step>
		<step live_target=".update-action input.btn" not_found_target="#update form">
			<position_difference top="20" left="100" />
			<text>Press on this Button to update.</text>
		</step>
	</steps>
</storyboard>